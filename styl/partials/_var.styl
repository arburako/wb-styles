/* Colors */
$prim-color = deepskyblue
$sec-color = gold

$body-background-color = #fff

$color-1-color = $prim-color
$color-2-color = $sec-color
$color-3-color = tomato
$color-4-color = whitesmoke
$color-5-color = gainsboro
$color-6-color = saddlebrown


/* Colors - Not semantic */
$grey = #444
$dark-grey = #222
$light-grey = #999


/* Global */
$main-font-family = Arial, sans-serif
$sec-font-family = Georgia, serif

$main-anchor-color = $prim-color
$main-anchor-color--hover = $sec-color


/* Root */
$root-font-size = 100%
$root-line-height = 1.5
$root-text-color = $grey
$sec-text-color = $dark-grey